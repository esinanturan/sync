{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch & Debug Chrome (Frontend)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend"
    },
    {
      "name": "Launch Debugger (Backend)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "dev"
      ],
      "restart": true,
      "port": 9229,
      "cwd": "${workspaceFolder}/backend",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "std",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Attach Debugger (Backend)",
      "type": "node",
      "request": "attach",
      "restart": true,
      "port": 9229,
      "cwd": "${workspaceFolder}/backend",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
